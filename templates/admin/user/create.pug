extends ../../layout.pug

block content
  h1 Créer un nouvel utilisateur
  form(action="/admin/users/create" method="post")
    .mb-3
      label(for='email') Email
      input#email.form-control(type='email' name='email' required)
    .mb-3
      label(for='password') Mot de passe
      input#password.form-control(type='password' name='password' required)
    .mb-3
      label(for='civility') Civilité
      select#civility.form-control(name='civility' required)
        option(value="1") Monsieur
        option(value="2") Madame
    .mb-3
      label(for='lastname') Nom
      input#lastname.form-control(type='text' name='lastname' required)
    .mb-3
      label(for='firstname') Prenom
      input#firstname.form-control(type='text' name='firstname' required)
    .mb-3
      label(for='phone') telephone
      input#phone.form-control(type='tel' name='phone' required)
    button.btn.btn-primary(type="submit") Créer
