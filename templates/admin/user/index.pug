block content
  a.btn.btn-success(href="/admin/users/create") Créer Nouvel Utilisateur
  if users && users.length > 0
    table.table
      thead 
        tr 
          th #
          th Nom 
          th email 
          th Téléphone 
          th(width="1%") 
      tbody
        each user in users
          tr
            td #{user.id}
            if user.civility == 2
              td Madame #{user.firstname} #{user.lastname}
            else
              td Monsieur #{user.firstname} #{user.lastname}
            td #{user.email}
            td #{user.phone}
            td.text-nowrap 
              a.btn.btn-primary(href=""/admin/users/edit/"+user.id")
                i.fa.fa-edit
              span &nbsp;&nbsp;
a.btn.btn-danger(href="/admin/users/delete/"+user.id)
